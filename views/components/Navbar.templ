package components

css navbarStyle() {
	padding: 1.5rem 0;
	height: 100%;
	display: flex;
	flex-direction: column;
}

css navbarBrandStyle() {
	padding: 0 1.5rem;
	margin-bottom: 2rem;
	border-bottom: 1px solid #34495e;
	padding-bottom: 1rem;
}

css navbarBrandTitle() {
	color: #ecf0f1;
	font-size: 1.5rem;
	font-weight: 600;
}

css navLinksStyle() {
	list-style: none;
	flex: 1;
}

css navItemStyle() {
	margin: 0.25rem 0;
}

css navLinkStyle() {
	display: flex;
	align-items: center;
	padding: 0.75rem 1.5rem;
	color: #bdc3c7;
	text-decoration: none;
	transition: all 0.3s ease;
	border-left: 3px solid transparent;
}

css navLinkHover() {
	background-color: #34495e;
	color: #ecf0f1;
	border-left-color: #3498db;
}

css navLinkActive() {
	background-color: #34495e;
	color: #ecf0f1;
	border-left-color: #e74c3c;
}

css navIconStyle() {
	font-size: 1.2rem;
	margin-right: 0.75rem;
	width: 1.5rem;
	text-align: center;
}

css navTextStyle() {
	font-weight: 500;
}

